@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model LaywerApp.ViewModels.ChangePasswordModel


@{
    Layout = null;
}

@if (ViewBag.Message != null)
{
    <div class="row justify-content-center">
        <div class="alert alert-danger m-3" role="alert" style="width:800px">
            @ViewBag.Message
        </div>
    </div>
}
<!Doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Change password</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="row justify-content-center m-2 p-2" >
        <form asp-action="ChangePassword" asp-controller="Edit" method="post" style="width:400px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.CurrentPassword" class="control-label">Current password</label>
                <input type="password" asp-for="@Model.CurrentPassword" class="form-control" required />
                <span asp-validation-for="@Model.CurrentPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="control-label">New password</label>
                <input type="password" asp-for="@Model.NewPassword" class="form-control" required />
                <span asp-validation-for="@Model.NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword" class="control-label">Confirm password</label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" required />
                <span asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>

