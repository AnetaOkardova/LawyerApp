@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model LaywerApp.ViewModels.UpdateAdminModel

@{
    ViewBag.Title = "Update Admin";
}

<div class="container mt-5">
    <div class="row">
        <div class="col offset-1 m-3 p-3">
            <form asp-controller="Edit" asp-action="UpdateAdmin" method="post" style="width: 90%">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for="Name">Име</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="NameInLatin">Име на латиница</label>
                    <input type="text" asp-for="NameInLatin" class="form-control" />
                    <span asp-validation-for="NameInLatin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="LastName">Презиме</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="LastNameInLatin">Презиме на латиница</label>
                    <input type="text" asp-for="LastNameInLatin" class="form-control" />
                    <span asp-validation-for="LastNameInLatin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Status">Звање</label>
                    <input type="text" asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="About">Биографија</label>
                    <textarea type="text" asp-for="About" class="form-control" cols="20" rows="10"></textarea>
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ImageUrl">Image Url</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>
