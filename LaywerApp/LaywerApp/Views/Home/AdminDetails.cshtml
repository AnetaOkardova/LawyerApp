@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model LaywerApp.ViewModels.AdminDetailsModel


@{
    ViewBag.Title = "Admin Details";
}

<div class="container-fluid">
    <div class="row justify-content-center p-5">
        <div class="col text-justify">
            <h1 class="text-center">@Model.Status @Model.Name @Model.LastName</h1>
            <div class="row">
                <div class="col-3">
                    <img class="p-5 justify-content-md-center align-content-center w-100 customShadow" src="@Model.ImageUrl" alt="Alternate Text" />
                </div>
                <div class="col-9">
                    <p class="p-5">@Model.About</p>
                </div>
            </div>
            <h6 class="p-5">Contact e-mail: @Model.Email</h6>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col text-justify">
            <h3>Лични податоци</h3>
            <table>
                <tr>
                    <td style="padding: 5px">Звање</td>
                    <td style="padding: 5px">@Model.Status</td>
                </tr>
                <tr>
                    <td style="padding: 5px">Име</td>
                    <td style="padding: 5px">@Model.Name</td>
                </tr>
                <tr>
                    <td style="padding: 5px">Име на латиница</td>
                    <td style="padding: 5px">@Model.NameInLatin</tdstyle="padding:>
                </tr>
                <tr>
                    <td style="padding: 5px">Презиме</td>
                    <td style="padding: 5px">@Model.LastName</td>
                </tr>
                <tr>
                    <td style="padding: 5px">Презиме на латиница</td>
                    <td style="padding: 5px">@Model.LastNameInLatin</td>
                </tr>
                <tr>
                    <td style="padding: 5px">Ажурирај податоци</td>
                    <td style="padding: 5px">
                        <p>
                            <a asp-controller="Edit" asp-action="UpdateAdmin" asp-route-id="@Model.Id" class="btn btn-secondary">Ажурирај</a>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 5px">Ажурирај податоци</td>
                    <td style="padding: 5px">
                        <p>
                            <a href="/Edit/ChangePassword" class="btn btn-success">Change password</a>
                        </p>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>