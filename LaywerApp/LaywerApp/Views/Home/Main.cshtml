<div class="row" id="articles">
    @foreach (var article in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img style="width: 100%; height: 300px" src="@article.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text">@article.ShortDescription</p>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="btn btn-success">See description</a>
                </div>
            </div>
        </div>
    }
</div>