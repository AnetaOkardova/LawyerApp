@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model LaywerApp.ViewModels.OverviewModel

@{
    ViewBag.Title = "Main page";
    var admin = Model.Collaborators.FirstOrDefault(x => x.Id == 1);
}


<div class=" container-fluid p-2">
    <div class=" row justify-content-center">
        <div class="col-md-3">
        </div>
        <div class="col p-5">
            <div id="carousel" class="carousel slide col" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/general-law-1.jpg" class="d-block w-100" style="height:350px" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>First slide label</h5>
                            <p>Some representative placeholder content for the first slide.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/general-law-2.jpg" class="d-block w-100" style="height:350px" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Second slide label</h5>
                            <p>Some representative placeholder content for the second slide.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/general-law-3.jpg" class="d-block w-100" style="height:350px" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Third slide label</h5>
                            <p>Some representative placeholder content for the third slide.</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>

<div class="container-fluid" id="aboutUs">
    <div class="row justify-content-sm-center align-items-center">
        <div class="col ml-3">
            <h1 class="text-center">За нас</h1>
            <p class="text-justify">
                @admin.About
            </p>
        </div>
        <div class="col">
            <img src="@admin.ImageUrl" class="customShadow ml-3" style="border-radius: 10px;" />
        </div>
    </div>
</div>


<div class="container-fluid overflow-auto" id="articles" style="height: 38rem">
    <div class="row p-5 justify-content-center">
        @foreach (var article in Model.Articles.OrderByDescending(x => x.DateCreated).ToList())
        {

            <div class="col-7 p-3">
                <div class="cusomShadow" style="width: 50rem; border: 1px solid black">
                    <table>
                        <tr>
                            <td style="width: 30%">
                                <img style="width: 100%; height: 150px" src="@article.ImageUrl" class="card-img-top" alt="...">
                            </td>
                            <td style="width:70%">
                                <div class="card-body">
                                    <h5 class="card-title">@article.Title</h5>
                                    <p class="card-text">@article.ShortDescription</p>
                                    <a asp-controller="Home" asp-action="ArticleDetails" asp-route-id="@article.Id" class="btn btn-success">See description</a>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        }
    </div>
</div>

<div class="row p-5" id="collaborators">
    @foreach (var collaborator in Model.Collaborators)
    {
        <div class="col-md-3 p-3">
            <div class="card customShadow" style="width: 18rem;">
                <img style="width: 100%; height: 300px" src="@collaborator.ImageUrl" class="card-img-top" alt="Collaborator's photo">
                <div class="card-body">
                    <h5 class="card-title">@collaborator.Status @collaborator.Name @collaborator.LastName</h5>
                    <a asp-controller="Home" asp-action="CollaboratorsDetails" asp-route-id="@collaborator.Id" class="btn btn-primary">See more</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row p-5 container-fluid">
    <div class="row justify-content-md-center">
        @foreach (var service in Model.LawServices)
        {
            <div class="col-md-3 ">
                <div class="card customShadow p-3 m-3" style="width: 20rem;">
                    <img style="width: 100%; border-radius: 50px" src="@service.ImageUrl" class="card-img-top" alt="Service image">
                    <div class="card-body">
                        <a asp-controller="Home" asp-action="LawServiceDetails" asp-route-id="@service.Id" class="card-title text-success">@service.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>