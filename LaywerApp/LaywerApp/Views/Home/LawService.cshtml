@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model List<LaywerApp.Models.LawService>


@{
    ViewBag.Title = "Services";
}

<div class="row p-5">
    @foreach (var service in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img style="width: 100%; height: 300px" src="@service.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@service.Title</h5>
                    <a asp-controller="Home" asp-action="LawServiceDetails" asp-route-id="@service.Id" class="btn btn-primary">See description</a>
                </div>
            </div>
        </div>
    }
</div>
