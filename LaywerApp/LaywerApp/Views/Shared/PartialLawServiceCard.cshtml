@model List<LaywerApp.ViewModels.LawServiceCardModel>



<div class="row p-5 container-fluid">
    <div class="row justify-content-md-center">
        @foreach (var service in Model)
        {
            <div class="col-md-3 ">
                <div class="card customShadow p-3 m-3" style="width: 20rem">
                    <img style="width: 100%; height: 200px; border-radius: 50px" src="@service.ImageUrl" class="card-img-top" alt="Service image">
                    <div class="card-body">
                        <a asp-controller="LawServices" asp-action="LawServiceDetails" asp-route-id="@service.Id" class="card-title text-success">@service.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>