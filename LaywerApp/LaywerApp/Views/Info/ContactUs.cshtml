@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model LaywerApp.Models.ContactRequest

@{
    ViewBag.Title = "Contact Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-4 ">
            <h1>Контакти</h1>
            <table class="align-items-center mt-5">
                <tr>
                    <th><img style="width: 25px" src="data:image/png;base64," /></th>
                    <th>Детали за контакт</th>
                </tr>
                <tr>
                    <th>E-mail</th>
                    <td>advokat.krstevska@gmail.com</td>
                </tr>
                <tr>
                    <th>Tel</th>
                    <td>0038977777777</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>Адреса: Улица „Петричка“ број 6/1/1-36, Центар, 1000 Скопје</td>
                </tr>
                <tr>
                    <th><img style="width: 75px" src="https://www.creativefabrica.com/wp-content/uploads/2018/11/Clock-timer-logo-by-Mansel-Brist-2-580x406.jpg" /></th>
                    <th>Работно време</th>
                </tr>
                <tr>
                    <th>Понеделник до петок</th>
                    <td>08:00 - 17:00 часот</td>
                </tr>
                <tr>
                    <th>Сабота</th>
                    <td>Затворено</td>
                </tr>
                <tr>
                    <th>Недела</th>
                    <td>Затворено</td>
                </tr>
            </table>
        </div>
        <div class="col offset-1 ml-3">
            <form asp-controller="Info" asp-action="ContactUs" method="post" style="width: 90%">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for="Name">Име и презиме</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Email">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Message">Message</label>
                    <textarea type="text" asp-for="Message" class="form-control" cols="20" rows="10"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send message" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            @*//mapa za adresata*@
        </div>
    </div>
</div>